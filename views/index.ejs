    <script src="https://unpkg.com/@supabase/supabase-js@2"></script>

    <script>
        const params = new URLSearchParams(window.location.search);
        const redirected = params.get("redirected");

        if (redirected === "true") {
            // Ouvrir la modale de connexion
            openLoginModal();
        }
        function openLoginModal() {
            const modal = document.getElementById("loginModal");
            if (modal) {
                modal.classList.remove("hidden"); // Affiche la modale
            }

            // Retirer le param√®tre "redirected" de l'URL apr√®s l'affichage de la modale
            const newUrl = window.location.href.split("?")[0];
            window.history.replaceState({}, "", newUrl);
        }

        if (typeof supabase === 'undefined') {
            console.error('Erreur: Supabase non initialis√©!')
            document.getElementById('loginError').textContent = 'Erreur technique - rechargez la page'
            document.getElementById('loginError').classList.remove('hidden')
        } else {
            console.log('Supabase initialis√©:', supabase)
        }
        // Gestion de la modale
        function openModal() {
            document.getElementById('loginModal').classList.remove('hidden');
            document.getElementById('loginError').classList.add('hidden');
        }

        function closeModal() {
            document.getElementById('loginModal').classList.add('hidden');
        }

        // √âv√©nements
        document.addEventListener('DOMContentLoaded', () => {
            const loginForm = document.getElementById('loginForm');
            if (loginForm) {
                loginForm.addEventListener('submit', handleLogin);
            } else {
                console.warn('Formulaire de connexion non trouv√©');
            }
            // Clic sur "Connectez-vous"
            document.querySelector('a[href="/connexion"]')?.addEventListener('click', (e) => {
                e.preventDefault();
                openModal();
            });

            // Fermer en cliquant √† l'ext√©rieur
            document.getElementById('loginModal').addEventListener('click', (e) => {
                if (e.target === e.currentTarget) closeModal();
            });

            // Soumission du formulaire
            document.getElementById('loginForm')?.addEventListener('submit', handleLogin);
        });

        async function handleLogin(event) {
    event.preventDefault();

    console.log("handleLogin");

    const form = event.currentTarget;
    const submitBtn = form.querySelector('button[type="submit"]');
    const errorDiv = document.getElementById('loginError');

    if (!submitBtn || !errorDiv) {
        console.error('√âl√©ments du formulaire non trouv√©s');
        return;
    }

    try {
        submitBtn.disabled = true;
        errorDiv.classList.add('hidden');

        const email = form.querySelector('#loginEmail').value;
        const password = form.querySelector('#loginPassword').value;

        // Appel API de connexion
        const response = await fetch('/api/login', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email, password })
        });

        if (!response.ok) {
            const error = await response.json();
            throw new Error(error.message || 'Erreur de connexion');
        }

        const data = await response.json();

        // ‚úÖ Si login OK, stocker les infos utilisateur pour usage offline
        localStorage.setItem('user', JSON.stringify({
            email: data.email,
            id: data.id,
            nom: data.nom
            // ajoute d'autres infos si besoin
        }));

        // Redirection apr√®s connexion r√©ussie
        window.location.href = '/';

    } catch (error) {
        console.error('Erreur:', error);

        // üî• Ajout : Essayer de charger un utilisateur local si pas de r√©seau
        const savedUser = localStorage.getItem('user');
        if (savedUser) {
            console.log('üõú Mode hors-ligne : utilisateur local d√©tect√©');
            const user = JSON.parse(savedUser);

            // Ici tu peux faire une validation basique si besoin
            // (par exemple v√©rifier si l'email saisi correspond)

            if (user.email === form.querySelector('#loginEmail').value) {
                console.log('‚úÖ Email correspond, connexion offline valid√©e.');
                window.location.href = '/'; // Simuler une connexion r√©ussie
                return;
            } else {
                console.warn('‚ùå Email ne correspond pas √† l\'utilisateur local.');
                errorDiv.textContent = "Pas de connexion r√©seau et utilisateur inconnu.";
                errorDiv.classList.remove('hidden');
            }
        } else {
            errorDiv.textContent = error.message || "Erreur de connexion.";
            errorDiv.classList.remove('hidden');
        }
    } finally {
        if (submitBtn) submitBtn.disabled = false;
    }
}


        // Gestion de la modale
        function showPasswordModal() {
            const modal = document.getElementById('passwordModal');
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function hidePasswordModal() {
            const modal = document.getElementById('passwordModal');
            modal.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        // Gestion du formulaire
        document.getElementById('passwordForm')?.addEventListener('submit', async function (e) {
            e.preventDefault();

            const currentPassword = document.getElementById('currentPassword').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            // Validation simple
            if (newPassword !== confirmPassword) {
                alert('Les mots de passe ne correspondent pas');
                return;
            }

            if (newPassword.length < 8) {
                alert('Le mot de passe doit contenir au moins 8 caract√®res');
                return;
            }

            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> En cours...';

            try {
                const response = await fetch('/api/change-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        currentPassword,
                        newPassword
                    })
                });

                const data = await response.json();

                if (response.ok) {
                    alert('Mot de passe mis √† jour avec succ√®s');
                    hidePasswordModal();
                    this.reset();
                } else {
                    throw new Error(data.message || 'Erreur lors de la mise √† jour');
                }
            } catch (error) {
                console.error('Erreur:', error);
                alert(error.message);
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'Mettre √† jour';
            }
        });

