<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier une Palanqu√©e</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-[#0d1b2a] p-6"> <!-- Fond de la page -->
    <div class="max-w-2xl mx-auto bg-[#1b263b] p-6 rounded-lg shadow-lg"> <!-- Fond de la carte -->
        <h1 class="text-2xl font-bold text-center text-white mb-4">Modifier la Palanqu√©e</h1>

        <h2 class="text-xl font-semibold text-gray-300 mb-3">Palanqu√©e : <%= palanquee.nom %></h2>
        
        <!-- Liste des plongeurs -->
        <div class="bg-[#1b263b] p-4 rounded-lg shadow-sm">
            <h3 class="text-lg font-medium text-gray-200 mb-2">Plongeurs actuels :</h3>
            <ul class="space-y-2">
                <% plongeurs.forEach(function(plongeur) { %>
                    <li class="flex justify-between items-center bg-[#0d1b2a] p-2 rounded shadow-sm">
                        <span class="text-gray-200"><%= plongeur.nom %> (<%= plongeur.niveau %>)</span>
                        <button class="text-red-500 hover:text-red-700" onclick="retirerPlongeur('<%= plongeur.id %>')">‚ùå</button>
                    </li>
                <% }); %>
            </ul>
        </div>

        <!-- Ajouter un plongeur -->
        <div class="mt-4">
            <h3 class="text-lg font-medium text-gray-200 mb-2">Ajouter un plongeur :</h3>
            <div class="flex gap-2">
                <select id="nouveauPlongeur" class="w-full p-2 border rounded text-black"> <!-- Texte noir pour le select -->
                    <% plongeurs.forEach(function(plongeur) { %>
                        <option value="<%= plongeur.id %>"><%= plongeur.nom %> (<%= plongeur.niveau %>)</option>
                    <% }); %>
                </select>
                <button onclick="ajouterPlongeur()" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">‚ûï Ajouter</button>
            </div>
        </div>

        <!-- Boutons d'action -->
        <div class="mt-6 flex gap-4 justify-center">
            <button onclick="enregistrerModifications()" class="bg-blue-500 text-white px-5 py-2 rounded hover:bg-blue-600">üíæ Enregistrer</button>
            <button onclick="annulerModification()" class="bg-gray-500 text-white px-5 py-2 rounded hover:bg-gray-600">‚ùå Annuler</button>
            <button onclick="supprimerPalanquee()" class="bg-red-500 text-white px-5 py-2 rounded hover:bg-red-600">üóëÔ∏è Supprimer</button>
        </div>
    </div>

    <script>
        const SUPABASE_URL = 'YOUR_SUPABASE_URL';
        const SUPABASE_KEY = 'YOUR_SUPABASE_KEY';
        const headers = {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${SUPABASE_KEY}`
        };

        async function retirerPlongeur(plongeurId) {
            console.log(`Tentative de retrait du plongeur ${plongeurId} de la palanqu√©e <%= palanquee.id %>`);

            const response = await fetch(`/retirer-plongeur-de-palanquee/<%= palanquee.id %>/${plongeurId}`, {
                method: "DELETE"
            });

            if (response.ok) {
                console.log("‚úÖ Plongeur retir√© avec succ√®s.");
                location.reload(); // Recharge la page pour voir les changements
            } else {
                alert("‚ùå Erreur lors du retrait du plongeur.");
            }
        }


        
        async function ajouterPlongeur() {
            const plongeurId = document.getElementById("nouveauPlongeur").value;
            console.log("Ajouter plongeur :", plongeurId);
            const response = await fetch(`${SUPABASE_URL}/palanquees_plongeurs`, {
                method: 'POST',
                headers: headers,
                body: JSON.stringify({
                    palanquee_id: "<%= palanquee.id %>", // Remplacez par l'ID de la palanqu√©e actuelle
                    plongeur_id: plongeurId
                })
            });

            if (response.ok) {
                console.log("Plongeur ajout√© avec succ√®s.");
                location.reload(); // Recharger la page pour voir les changements
            } else {
                alert("Erreur lors de l'ajout du plongeur.");
            }
        }
        
        async function enregistrerModifications() {
            console.log("Enregistrer les modifications");
            // Ajouter logique pour sauvegarder les changements
            // √Ä adapter selon vos besoins
        }
        
        function annulerModification() {
            window.history.back();
        }
        
        async function supprimerPalanquee() {
            if (confirm("√ätes-vous s√ªr de vouloir supprimer cette palanqu√©e et tous les plongeurs associ√©s ?")) {
                const response = await fetch("/supprimer_palanquee", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ palanqueeId: "<%= palanquee.id %>" })
                });

                if (response.ok) {
                    console.log("Palanqu√©e et plongeurs supprim√©s avec succ√®s.");
                    window.history.back(); // Retour √† l'√©cran pr√©c√©dent
                } else {
                    alert("Erreur lors de la suppression de la palanqu√©e.");
                }
            }
        }



    </script>
    <!-- IndexedDB and App Scripts -->
    <script src="/js/indexeddb.js"></script>
    <script src="/js/client.js"></script>
</body>
</html>
