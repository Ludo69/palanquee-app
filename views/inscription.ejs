<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Inscription | Palanquee Pro</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#2A70E0',
                        secondary: '#38B2AC',
                        accent: '#ED8936',
                        dark: '#1A202C'
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif']
                    }
                }
            }
        };
    </script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

        <!-- Fichier CSS externe -->
        <link rel="stylesheet" href="/style.css">

    <style>
        /* Correction spécifique pour le responsive */
        @media (min-width: 768px) {
            .form-grid {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 1.5rem;
            }
            .form-section {
                margin: 0;
                padding: 0;
            }
        }
    </style>
</head>

<body class="bg-gradient-dark text-white font-sans flex flex-col items-center justify-center min-h-screen p-4 sm:p-6">

    <!-- Header -->
    <header class="flex items-center justify-center mb-6 sm:mb-8 w-full px-2">
        <div class="flex items-center space-x-2 sm:space-x-3">
            <div class="bg-primary-dark p-2 sm:p-3 rounded-xl shadow-lg">
                <i class="fas fa-water text-xl sm:text-2xl text-primary-light"></i>
            </div>
            <h1 class="text-2xl sm:text-3xl font-bold">
                <a href="/" class="relative group">
                    <span class="logo-text relative">
                        Palanquee
                        <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-full"></span>
                    </span>
                    <span class="text-gray-300">Pro</span>
                </a>
            </h1>
        </div>
    </header>

    <!-- Formulaire d'inscription - Version corrigée -->
    <div class="w-full max-w-4xl bg-dark-light p-4 sm:p-6 rounded-2xl shadow-lg border border-gray-700 mx-2">
        <h2 class="text-xl sm:text-2xl font-bold text-primary text-center mb-3 sm:mb-4">Créer un Club</h2>

        <% if (error) { %>
            <div class="bg-red-500 text-white text-center p-2 mb-3 sm:mb-4 rounded-lg text-sm sm:text-base">
                <%= error %>
            </div>
        <% } %>

        <form id="signupForm" action="/inscription" method="POST" class="space-y-4">
            <!-- Conteneur grid pour les sections -->
            <div class="form-grid">
                <!-- Section Club -->
                <div class="form-section space-y-3 sm:space-y-4">
                    <h3 class="text-base sm:text-lg font-semibold text-secondary mb-2 sm:mb-3">Informations du Club</h3>

                    <div>
                        <label class="block text-gray-400 mb-1 text-sm sm:text-base">Nom du Club</label>
                        <input type="text" name="club_name" id="clubName" required
                            class="w-full px-3 py-2 bg-dark border border-gray-700 rounded-lg focus:ring-primary focus:outline-none text-sm sm:text-base">
                    </div>

                    <div>
                        <label class="block text-gray-400 mb-1 text-sm sm:text-base">Numéro d'affiliation</label>
                        <input type="text" name="affiliation_number" id="affiliationNumber" required
                            class="w-full px-3 py-2 bg-dark border border-gray-700 rounded-lg focus:ring-primary focus:outline-none text-sm sm:text-base">
                    </div>

                    <div>
                        <label class="block text-gray-400 mb-1 text-sm sm:text-base">Code Postal</label>
                        <input type="text" name="postal_code" id="postalCode" required
                            class="w-full px-3 py-2 bg-dark border border-gray-700 rounded-lg focus:ring-primary focus:outline-none text-sm sm:text-base">
                    </div>

                    <div>
                        <label class="block text-gray-400 mb-1 text-sm sm:text-base">Ville</label>
                        <input type="text" name="city" id="city" required
                            class="w-full px-3 py-2 bg-dark border border-gray-700 rounded-lg focus:ring-primary focus:outline-none text-sm sm:text-base">
                    </div>

                    <div>
                        <label class="block text-gray-400 mb-1 text-sm sm:text-base">Adresse</label>
                        <input type="text" name="address" id="address" required
                            class="w-full px-3 py-2 bg-dark border border-gray-700 rounded-lg focus:ring-primary focus:outline-none text-sm sm:text-base">
                    </div>
                </div>

                <!-- Section Administrateur -->
                <div class="form-section space-y-3 sm:space-y-4">
                    <h3 class="text-base sm:text-lg font-semibold text-secondary mb-2 sm:mb-3">Informations de l'Administrateur</h3>

                    <div>
                        <label class="block text-gray-400 mb-1 text-sm sm:text-base">Prénom</label>
                        <input type="text" name="first_name" id="adminFirstName" required
                            class="w-full px-3 py-2 bg-dark border border-gray-700 rounded-lg focus:ring-primary focus:outline-none text-sm sm:text-base">
                    </div>

                    <div>
                        <label class="block text-gray-400 mb-1 text-sm sm:text-base">Nom</label>
                        <input type="text" name="last_name" id="adminLastName" required
                            class="w-full px-3 py-2 bg-dark border border-gray-700 rounded-lg focus:ring-primary focus:outline-none text-sm sm:text-base">
                    </div>

                    <div>
                        <label class="block text-gray-400 mb-1 text-sm sm:text-base">Email</label>
                        <input type="email" name="email" id="adminEmail" required
                            class="w-full px-3 py-2 bg-dark border border-gray-700 rounded-lg focus:ring-primary focus:outline-none text-sm sm:text-base">
                    </div>

                    <div>
                        <label class="block text-gray-400 mb-1 text-sm sm:text-base">Mot de passe</label>
                        <input type="password" name="password" id="adminPassword" required
                            class="w-full px-3 py-2 bg-dark border border-gray-700 rounded-lg focus:ring-primary focus:outline-none text-sm sm:text-base">
                    </div>
                </div>
            </div>

            <!-- Bouton d'inscription -->
            <div class="pt-2">
                <button type="submit"
                    class="w-full bg-primary hover:bg-blue-600 text-white py-2 px-4 rounded-lg font-medium shadow-md transition text-sm sm:text-base transform hover:-translate-y-0.5">
                    S'inscrire
                </button>
            </div>
        </form>
    </div>

    <!-- Modale de succès -->
    <div id="successModal" class="fixed inset-0 z-[999] hidden items-center justify-center p-4">
        <div class="absolute inset-0 bg-black/60 backdrop-blur-[2px]"></div>
        
        <div class="relative z-10 bg-dark-light p-6 sm:p-8 rounded-xl max-w-md w-full mx-2 border border-gray-700 shadow-lg">
            <div class="text-center mb-4 sm:mb-6">
                <i class="fas fa-check-circle text-green-500 text-4xl sm:text-5xl mb-3"></i>
                <h3 class="text-xl sm:text-2xl font-bold text-white mb-1 sm:mb-2">Inscription réussie !</h3>
                <p class="text-gray-300 text-sm sm:text-base">Votre club et votre compte administrateur ont été créés avec succès.</p>
            </div>
            <div class="flex justify-center">
                <a href="/" class="bg-primary hover:bg-blue-600 text-white px-4 sm:px-6 py-2 rounded-lg font-medium transition-colors text-sm sm:text-base">
                    Retour à l'accueil
                </a>
            </div>
        </div>
    </div>

    <script>
        function showModal() {
        const modal = document.getElementById('successModal');
        
        // Méthode infaillible
        modal.classList.remove('hidden');
        modal.style.display = 'flex'; // Force l'affichage
        
        // Optionnel: Animation douce
        setTimeout(() => {
            modal.querySelector('.bg-black/60').classList.add('opacity-100');
        }, 10);
    }
        document.getElementById('signupForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Conversion en objet simple (au lieu de FormData)
            const formData = {
                club_name: document.getElementById('clubName').value,
                affiliation_number: document.getElementById('affiliationNumber').value,
                postal_code: document.getElementById('postalCode').value,
                city: document.getElementById('city').value,
                address: document.getElementById('address').value,
                first_name: document.getElementById('adminFirstName').value,
                last_name: document.getElementById('adminLastName').value,
                email: document.getElementById('adminEmail').value,
                password: document.getElementById('adminPassword').value
            };
        
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Création en cours...';
        
            try {
                const response = await fetch('/inscription', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json' // ← Essentiel !
                    },
                    body: JSON.stringify(formData) // ← Conversion en JSON
                });
        
                const data = await response.json();
        
                if (response.ok) {
                    showModal();
                    //document.getElementById('successModal').classList.remove('hidden');
                } else {
                    alert(data.error || 'Erreur lors de l\'inscription');
                }
            } catch (error) {
                console.error('Erreur:', error);
                alert('Erreur de connexion au serveur');
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'S\'inscrire';
            }
        });
        </script>
</body>
</html>